<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <com.github.jorgecastillo.FillableLoader
      android:id="@+id/fillableLoader"
      android:layout_width="250dp"
      android:layout_height="250dp"
      app:fillColor="#E91E63"
      app:originalWidth="512"
      app:originalHeight="512"
      app:strokeDrawingDuration="1000"
      app:fillDuration="10000"
      app:clippingTransform="waves"
      android:layout_gravity="center"
      />

</FrameLayout>